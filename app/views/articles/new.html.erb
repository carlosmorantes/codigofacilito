<div style="width: 80%; margin: 0 auto;" >

<h1>Crear articulo</h1>
<%= form_for(@article) do |f| %>
  <div class="field" >
  	<%= f.text_field :title, placehoder: "Titulo", class: "form-control" %>
  </div>
  <div class="field" >
  	<%= f.text_area :body, placehoder: "Escribe aqui un comentario", style:"height:250px;", class: "form-control" %>
  </div>
  <div class="field" >
  	<%= f.submit "Guardar", class: "btn be-red white" %>
  </div>

<%end%>

</div>